[apply]
	whitespace = nowarn
[branch]
	autoSetupMerge = always
	autoSetupRebase = always
[checkout]
	defaultRemote = origin
[commit]
	verbose = true
[core]
	excludesfile = ~/.config/git/ignore
	pager = delta
	bare = false
[diff]
	colorMoved = default
[delta]
	navigate = true
[fetch]
	prune = true
	pruneTags = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[filter "age"]
	clean = git-age clean -- %f
	smudge = git-age smudge -- %f
	required = true
[help]
	autoCorrect = 1
[interactive]
	diffFilter = delta --color-only
[init]
	defaultBranch = master
[log]
	abbrevCommit = true
	date = format:%Y-%m-%d %H:%M:%S (%a)
	decorate = full
[merge]
	conflictstyle = diff3
	tool = nvimdiff
[mergetool "nvimdiff"]
	cmd = "nvim -d \"$LOCAL\" \"$REMOTE\" \"$MERGED\" -c \"wincmd w\""
[pull]
	default = upstream
	ff = only
[push]
	default = simple
	followTags = true
[rebase]
	abbreviateCommands = true
	autoSquash = true
	stat = true
[status]
	branch = true
[submodule]
	fetchJobs = 0
[tag]
	sort = version:refname
[user]
	email = d.wan@icloud.com
	name = Derek Wan
[filter "strongbox"]
	clean = strongbox -clean %f
	smudge = strongbox -smudge %f
	required = true
[diff "strongbox"]
	textconv = strongbox -diff
[merge "strongbox"]
	driver = strongbox -merge-file %O -merge-file %A -merge-file %B -merge-file %L -merge-file %P -merge-file %S -merge-file %X -merge-file %Y
