#!/usr/bin/env bash
# shellcheck source=/dev/null

_script_dir=$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" &>/dev/null && pwd)
_env="$_script_dir/.env"
echo_date() { echo "[$(date +'%Y-%m-%d %H:%M:%S')] $*"; }

if [ -f "$_env" ]; then
	echo_date "Sourcing environment file '$_env'..."
	source "$_env"

	declare -a _paths=("$HOME"/Dropbox "$HOME"/personal "$HOME"/work)
	for _path in "${_paths[@]}"; do
		if [ -d "$_path" ]; then
			echo_date "Backing up '$_path'..."
			# restic backup --exclude .venv "$_path"
			restic forget --keep-within-hourly 1w --keep-within-daily 1m \
				--keep-within-weekly 1y --keep-within-monthly 5y \
				--keep-within-yearly 10y --dry-run --prune
		else
			echo_date "Unable to find '$_path'; skipping..."
		fi
	done
else
	echo_date "Unable to find environment file '$_env'; exiting..."
fi
